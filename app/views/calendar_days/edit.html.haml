%div.form_container
  %h2.event_h2
    Edit Day
  = form_for(@calendar_day) do |f|
    = f.number_field(:rate, in: 1..10, placeholder: 'Rate Day', class: 'rate')
    = f.text_area(:title, placeholder:  'Event Title', class: 'area')
    = f.text_area(:description, placeholder: 'Event Description', class: 'area')
    = f.hidden_field(:event_date, value: params[:id])
    = f.submit 'Submit', class: 'submit'
