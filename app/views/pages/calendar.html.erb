<h2> Your Calendar </h2>
<h3> Date: <%= @month.beginning_date.to_s %> - <%= @month.end_date.to_s %> </h3>

<%= link_to 'Previous Month', calendar_path(:month => @previous_month.month, :year => @previous_month.year) %>
<%= link_to 'Current Month', calendar_path %>
<%= link_to 'Next Month', calendar_path(:month => @next_month.month , :year => @next_month.year)   %>

<table id = 'day_names'>
    <th> Mon </th>
    <th> Tues </th>
    <th> Wed </th>
    <th> Thurs </th>
    <th> Fri </th>
    <th> Sat </th>
    <th> Sun </th>
</table>

<table>

    <% @month.weeks.each do |week| %>
      <tr>
        <% week.days.each do |day| %>
            <% if day == Date.today %>
               <td class = 'active'>
            <% else %>
                <td>
            <% end %>
            <%= day.to_s %>
            <%= link_to 'Edit Day', day_path %>
          </td>
        <% end %>
      </tr>
    <% end %>
</table>
