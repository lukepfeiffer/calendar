<div class = 'form_container'>
  <div class = 'home'> Sign Up </div>
  <%= form_for(@user) do |f| %>


      <%= f.label :email %>
      <%= f.text_field :email ,  placeholder: "Email" , class: "field" %>

      <%= f.label :password %>
      <%= f.password_field :password , placeholder: "Password" ,class: "field"  %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation ,  placeholder: "Password Confirmation" , class: "field" %>

      <%= f.submit :submit , class: "submit" %>

  <% end %>
  <div class = 'home'> Sign In </div>
  <%= form_tag(sessions_path) do %>

    <%= text_field_tag :email , nil ,placeholder: "Email" , class: "field" %>
    <%= password_field_tag :password , nil , placeholder: "Password" ,class: "field"  %>
    <%= submit_tag 'Sign In', class: 'submit' %>

  <% end %>
</div>
